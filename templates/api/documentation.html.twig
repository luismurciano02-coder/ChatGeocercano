<script>
    function testEndpoint(formId, endpoint) {
        const form = document.getElementById(formId);
        const responseBox = document.getElementById('response-' + formId);
        
        // Obtener datos del formulario
        const formData = new FormData(form);
        const data = Object.fromEntries(formData);
        
        // Convertir latitud y longitud a n√∫meros
        if (data.latitud) data.latitud = parseFloat(data.latitud);
        if (data.longitud) data.longitud = parseFloat(data.longitud);
        
        // Construir la URL correcta
        const baseUrl = window.location.pathname;
        const url = baseUrl.replace('/api/doc', endpoint);
        
        // Realizar solicitud
        fetch(url, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(data)
        })
        .then(response => response.json())
        .then(result => {
            responseBox.classList.add('show');
            responseBox.classList.remove('error');
            responseBox.textContent = JSON.stringify(result, null, 2);
            
            // Colorear si es error
            if (!result.success) {
                responseBox.classList.add('error');
            }
        })
        .catch(error => {
            responseBox.classList.add('show', 'error');
            responseBox.textContent = 'Error: ' + error.message;
        });
    }
    
    function testEndpointWithToken(formId, endpoint, method = 'POST') {
        const form = document.getElementById(formId);
        const responseBox = document.getElementById('response-' + formId);
        
        // Obtener datos del formulario
        const formData = new FormData(form);
        const data = Object.fromEntries(formData);
        
        // Extraer el token
        let token = data.token || data.token_usuario;
        delete data.token;
        delete data.token_usuario;
        
        // Construir la URL correcta
        const baseUrl = window.location.pathname;
        const url = baseUrl.replace('/api/doc', endpoint);
        
        // Configurar la solicitud
        const fetchOptions = {
            method: method,
            headers: {
                'Content-Type': 'application/json'
            }
        };
        
        // Solo agregar Authorization header si hay token
        if (token) {
            fetchOptions.headers['Authorization'] = 'Bearer ' + token;
        }
        
        // Solo agregar body para POST
        if (method === 'POST') {
            fetchOptions.body = JSON.stringify(data);
        }
        
        // Realizar solicitud
        fetch(url, fetchOptions)
        .then(response => response.json())
        .then(result => {
            responseBox.classList.add('show');
